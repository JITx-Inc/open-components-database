#use-added-syntax(esir)
defpackage ocdb/rc-network :
  import core
  import collections
  import math
  import esir
  import esir/utils
  import esir/gen
  import ocdb/tests/default-harness
  import ocdb/utils/box-symbol
  import ocdb/pinspec
  import esir/repl-lib
pcb-component battery : 
  pin pos 
  pin neg 
  spice: 
    "[V] <pos> <neg> PULSE(0 5 0 0 0 1 1 0)"
pcb-component resistor: 
  pin a 
  pin b 
  spice: 
    "[R] <a> <b> 550"
pcb-component capacitor: 
  pin pos 
  pin neg 
  spice: 
    "[C] <pos> <neg> 470u"

pcb-module main: 
  inst bat: battery 
  inst res: resistor 
  inst cap: capacitor
  net (bat.pos, res.a)
  net (res.b, cap.pos)
  net gnd (cap.neg, bat.neg)
pcb-design main-design: 
  module = main 
