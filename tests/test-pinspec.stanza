pcb-module main :
  inst c1 : mycomponent
  package(c1) at loc(0.0, 0.0) on Top
  inst c2 : mymem1
  package(c2) at loc(0.0, 0.0) on Top
  inst c3 : mymem2
  package(c3) at loc(0.0, 0.0) on Top
  inst c4 : mymem3
  package(c4) at loc(0.0, 0.0) on Top

pcb-design main-design :
  module = main
  board = {default-board(4, 10.0, 10.0)}