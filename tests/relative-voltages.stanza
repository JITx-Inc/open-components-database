      #EXPECT(eval-voltage(e1) == typ(3.1))
    
    let :
      val e1 = min-max(0.12, 3.1) * voltage(VDD)
      #EXPECT(eval-voltage(e1) == min-max(0.12, 3.1))
    
  evaluate(main-module)
