    net VDD ()
    property(VDD.net-voltage) = typ(1.0)

    let :
      val e1 = 1.0 + voltage(VDD)
      #EXPECT(eval-voltage(e1) == typ(2.0))
    
    let :
      val e1 = min-max(-1.0, 1.0) + voltage(VDD)
      #EXPECT(eval-voltage(e1) == min-max(0.0, 2.0))
    
