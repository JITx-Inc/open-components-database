public defn export-cad (name:String, type:String) :
  export-kicad(name, [`place => true 
                            `gen-board => true 
                            `gen-bom => false 
                            `gen-schematic => true 
                            `fresh => true 
                            `schematic-version => 4
                            `param-configs => [`sketch]] )
