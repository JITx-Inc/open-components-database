#use-added-syntax(jitx)
defpackage ocdb/tolerance:
  import core
  import collections
  import math

public pcb-struct ocdb/tolerance/Toleranced:
  nominal:Double,
  plus:Double,
  minus:Double,

public defn Toleranced (value:Double, tolerance:Double):
  Toleranced(value, tolerance, tolerance)

public defn max (t:Toleranced):
  nominal(t) + plus(t)

public defn min (t:Toleranced):
  nominal(t) - minus(t)

defn center (t:Toleranced):
  0.5 * (min(t) + max(t))
