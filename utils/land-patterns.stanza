; ====== Reference Label Helpers ===============================================

public defn ref-label (x:Double, y:Double, a:Anchor) :
  inside pcb-package :
    layer(Silkscreen("values", Top)) = Text(">REF", 0.7056, a, loc(x,y))
    
public defn ref-label (x:Double, y:Double) :
  ref-label(x,y,C)

public defn ref-label () :
  ref-label(0.0, 0.0)

