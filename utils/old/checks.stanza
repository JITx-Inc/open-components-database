  val [vih-v vil-v] = [vih(io-prop) vil(io-prop)]
  #CHECK(
    condition =            min(driver-voh) >= vih-v,
    name =                 "IO pin checks"
    description =          "Check io pin properties"
    category =             "Pin Checks"
    subcheck-description = "Verify min voh of output driver is greater than the vih of the input pin",
