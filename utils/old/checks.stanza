    description =          "Check resistor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the resistor component has an operating-point property",
    pass-message =         "Resistor %_ has a property for operating-point (%_)" % [ref(r), property(r.operating-point)],
    info-message =         "Resistor %_ does not have the operating-point property attached" % [ref(r)],
    locators =             [r]
  )
  #CHECK(
    condition =            has-property?(r.rated-power),
