public pcb-check inductor-component (l:JITXObject) :
  val name = "Inductor checks"
  val description = "Check inductor component properties"
  val category = "Component Checks"

  ; should check that pins of the resistor are connected (if they don't have a NC property)
  for l-pin in pins(l) do :
    if not no-connect?(l-pin) :
      #CHECK(
        condition =            has-populated-connected-pins?(l-pin),
        name =                 "Inductor checks"
        description =          "Check that the inductor pins are connected"
        category =             "Component Checks"
        subcheck-description = "Check the inductor component is connected properly",
        pass-message =         "Inductor %_ pin %_ is connected properly" % [ref(l), ref(l-pin)],
        fail-message =         "Inductor %_ pin %_ is not connected properly" % [ref(l), ref(l-pin)],
        locators =             [l]
      )

  #CHECK(
    condition =            has-property?(l.inductance),
    name =                 "Inductor checks"
    description =          "Check inductor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the inductor component has the correct inductance property",
    pass-message =         "Inductor %_ has the correct inductance property for an inductor" % [ref(l)],
    fail-message =         "Inductor %_ does not have the correct inductance property for an inductor" % [ref(l)],
    locators =             [l]
  )

  #CHECK(
    condition =            has-property?(l.operating-point),
    name =                 "Inductor checks"
    description =          "Check inductor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the inductor component has the correct operating-point property",
    pass-message =         "Inductor %_ has the correct property for operating-point" % [ref(l)],
    info-message =         "Inductor %_ does not have the correct operating-point property" % [ref(l)],
    locators =             [l]
  )
  #CHECK(
    condition =            has-property?(l.dc-resistance),
    name =                 "Inductor checks"
    description =          "Check inductor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the inductor component has the correct dc-resistance property",
    pass-message =         "Inductor %_ has the correct property for dc-resistance (%_)" % [ref(l), property(l.dc-resistance)],
    info-message =         "Inductor %_ does not have the correct dc-resistance property" % [ref(l)],
    locators =             [l]
  )
  #CHECK(
    condition =            has-property?(l.rated-power),
    name =                 "Inductor checks"
    description =          "Check inductor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the inductor component has the correct rated-power property",
    pass-message =         "Inductor %_ has the correct property for rated-power (%_)" % [ref(l), property(l.rated-power)],
    info-message =         "Inductor %_ does not have the correct rated-power property" % [ref(l)],
    locators =             [l]
  )

  val [vpk, i, temp] = [[min(peak-voltage(property(l.operating-point)))
                        max(peak-voltage(property(l.operating-point)))],
                        max(peak-current(property(l.operating-point))),
                        OPERATING-TEMPERATURE[1]]

  val power = property(l.dc-resistance) * pow(i, 2.0) ; just using the DC formula
  if has-property?(l.derating):
    ; Derate the power based on the piecewise linear curve from MFG
    val derating = PWL(property(l.derating))[temp]
    val pwr = derating * property(l.rated-power)
    #CHECK(
      condition =            pwr * DERATE-INDUCTOR-POWER > power,
      name =                 "Inductor checks"
      description =          "Check inductor component properties"
      category =             "Component Checks"
      subcheck-description = "Check the inductor power derating meets the design requirements",
      pass-message =         "Inductor %_ power derating %_W meets the design requirements of %_W" % [ref(l), pwr * DERATE-RESISTOR-POWER, power],
      fail-message =         "Inductor %_ power derating %_W does not meet the design requirements of %_W" % [ref(l), pwr * DERATE-RESISTOR-POWER, power],
      locators =             [l]
    )
  else:
      ; Derate the power if MFG derating is missing
