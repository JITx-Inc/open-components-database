    locators =             [out-pin, io-pin]
  )
  #CHECK(
    condition =            max(driver-vol) <= vil-v,
    name =                 "IO pin checks"
    description =          "Check io pin properties"
    category =             "Pin Checks"
    subcheck-description = "Verify max vol of output driver is lower than the vil of the input pin",
    pass-message =         "Output pin %_ max vol %_ is compatible with the input pin %_ vil %_" % [ref(out-pin), max(driver-vol), ref(io-pin), vil-v],
