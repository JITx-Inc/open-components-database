    description =          "Check resistor component properties"
    category =             "Component Checks"
    subcheck-description = "Check the resistor component has a rated-power property",
    pass-message =         "Resistor %_ has a property for rated-power (%_)" % [ref(r), property(r.rated-power)],
    info-message =         "Resistor %_ does not have the rated-power property attached" % [ref(r)],
    locators =             [r]
  )

  val [vpk, i, temp] = [[min(peak-voltage(property(r.operating-point)))
                        max(peak-voltage(property(r.operating-point)))],
                        max(peak-current(property(r.operating-point))),
                        OPERATING-TEMPERATURE[1]]

  val power = property(r.resistance) * pow(i, 2.0)
  val derating = 
    if has-property?(r.derating):
