    locators =             [out-pin, io-pin]
  )
  if has-property?(out-pin.digital-io):
    #CHECK(
      condition =            min(voh(io-driver)) >= vih(out-prop),
      name =                 "IO pin checks"
      description =          "Check io pin properties"
      category =             "Pin Checks"
      subcheck-description = "Verify min voh of io driver is greater than the vih of the io pin",
      pass-message =         "IO pin %_ min voh %_ is compatible with the io pin %_ vih %_" % [ref(io-pin), min(voh(io-driver)), ref(out-pin), vih(out-prop)],
      fail-message =         "IO pin %_ min voh %_ is not compatible with the io pin %_ vih %_" % [ref(io-pin), min(voh(io-driver)), ref(out-pin), vih(out-prop)],
      locators =             [io-pin]
    )
    #CHECK(
      condition =            max(vol(io-driver)) <= vil(out-prop),
      name =                 "IO pin checks"
      description =          "Check io pin properties"
      category =             "Pin Checks"
      subcheck-description = "Verify max vol of io driver is lower than the vil of the io pin",
      pass-message =         "IO pin %_ max vol %_ is compatible with the io pin %_ vil %_" % [ref(io-pin), max(vol(io-driver)), ref(out-pin), vil(out-prop)],
      fail-message =         "IO pin %_ max vol %_ is not compatible with the io pin %_ vil %_" % [ref(io-pin), max(vol(io-driver)), ref(out-pin), vil(out-prop)],
      locators =             [out-pin, io-pin]
    )

  val generic-io-prop? = property?(io-pin.generic-pin)
  match(generic-io-prop?: One) :
    val max-input-voltage = max-voltage $ value(generic-io-prop?)
    #CHECK(
      condition =            in-range?(max-input-voltage, voh(driver(out-prop))),
