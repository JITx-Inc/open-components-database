public pcb-enum ocdb/utils/bundles/JTAGPins :
  JTAG-TRSTN

public pcb-bundle jtag (pins:Tuple<ocdb/utils/bundles/JTAGPins>):
  pin tck
  pin tdi
  pin tdo
  pin tms
  for p in pins do :
    switch(p) :
      JTAG-TRSTN : make-pin(`trstn)

public defn jtag ():
  jtag([JTAG-TRSTN])

