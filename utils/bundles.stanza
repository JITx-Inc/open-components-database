defn diff-pair-pins () :
  inside pcb-bundle:
    pin N
    pin P

public pcb-bundle rtd :
  port N : pin[2]
  port P : pin[2]

public pcb-bundle diff-pair :
  diff-pair-pins()

public pcb-bundle lvds : 
  diff-pair-pins()

