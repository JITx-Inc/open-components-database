      UART-RX : make-pin(`rx)
      UART-TX : make-pin(`tx)

public defn uart ():
  uart([UART-RX, UART-TX])

public pcb-bundle usart (pins:Tuple<ocdb/utils/bundles/UARTPins>) :
  for p in pins do :
    switch(p) :
      UART-DTR : make-pin(`dtr)
      UART-CTS : make-pin(`cts)
      UART-DCD : make-pin(`dcd)
      UART-RI  : make-pin(`ri)
      UART-DST : make-pin(`dst)
      UART-RTS : make-pin(`rts)
      UART-CK : make-pin(`ck)
      UART-DE : make-pin(`de)
      UART-CS : make-pin(`cs)
